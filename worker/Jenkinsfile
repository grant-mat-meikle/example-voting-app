pipeline {
    agent any

    tools{
        maven 'Maven 3.6.1'
    }

    stages {
        stage('build') {
            steps {
                echo 'Compile worker app'
                dir('worker'){
                    sh 'mvn compile'
                } 
            }
        }
        stage('test') {
            steps {
                echo 'Running unit tests on worker app'
            }
        }
        stage('package') {
            steps {
                echo 'Packaging worker app'
            }
        }
    }

    post{
        always{
            echo 'Build pipeline for worker is complete..'
        }
    }
}
